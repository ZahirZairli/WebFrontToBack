@{
    ViewData["Title"] = "Index";
    int a = 1;
}

@model ICollection<TeamMember>
    @if (TempData["teamexist"] != null)
    {
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <strong>Hi!</strong> @TempData["teamexist"].
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    }
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="display:inline;" class="card-title">Team Members</h4>
            <div class="table-responsive">
                <a class="btn btn-success text-light" asp-area="Admin" asp-controller="TeamMember" asp-action="Create" style="float:right;">Create a new team member</a>
                <br />
                <br />
                <br />
                <table class="table table-striped text-center table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Picture
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Profession
                            </th>
                            <th>
                                Edit
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (TeamMember member in Model)
                        {
                            <tr>
                                <th>
                                    @a
                                </th>
                                <td class="py-1">
                                    <img src="~/assets/img/@member.Imagepath" alt="image" />
                                </td>
                                <td>
                                    @member.Fullname
                                </td>
                                <td>
                                    @member.Profession
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="TeamMember" asp-action="Detail" asp-route-id="@member.Id" asp-area="Admin"><i class="mdi mdi-account-card-details"></i> Detail</a>
                                            <a class="dropdown-item" asp-controller="TeamMember" asp-action="Update" asp-route-id="@member.Id" asp-area="Admin"><i class="mdi mdi-refresh"></i> Update</a>
                                            <a class="dropdown-item" asp-controller="TeamMember" asp-action="Delete" asp-route-id="@member.Id" asp-area="Admin"><i class="mdi mdi-delete"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            a++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

