 @{
    ViewData["Title"] = "Index";
    int a = ((Model.CurrentPage-1)*Model.Take)+1;
}
@model PaginateVM<Category>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 style="display:inline;" class="card-title">Categories</h4>
                <div class="container" style="margin-top:10px;">
                    <form method="post" asp-area="Admin" asp-action="Index" asp-controller="Category">
                        <div class="input-group">
                            <select asp-for="Take" class="form-select">
                                <option value="2">2</option>
                                <option value="5">5</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                    <button style="margin-top:10px;" type="submit" class="btn btn-outline-warning">Get data</button>
                    </form>
                </div>
            <div class="table-responsive">
                <a class="btn btn-success text-light" asp-area="Admin" asp-controller="Category" asp-action="Create" style="float:right;">Create a new category</a>
                <br />
                <br />
                <br />
                <table class="table table-striped text-center table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Services
                            </th>
                            <th>
                                Edit
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Category category in Model.Data)
                        {
                            <tr>
                                <th>
                                    @a
                                </th>
                                <td>
                                    @category.Name
                                </td>
                                <td>
                                    <div class="progress">
                                        <div class="progress-bar bg-@(category.Services.Count()<=2?"danger":"success")" role="progressbar" style="width: @(category.Services.Count())0%" aria-valuenow="@(category.Services.Count())" aria-valuemin="0" aria-valuemax="10"></div>
                                    </div>
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="Category" asp-action="Detail" asp-route-id="@category.Id" asp-area="Admin"><i class="mdi mdi-account-card-details"></i> Detail</a>
                                            <a class="dropdown-item" asp-controller="Category" asp-action="Update" asp-route-id="@category.Id" asp-area="Admin"><i class="mdi mdi-refresh"></i> Update</a>
                                            <a class="dropdown-item" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" asp-area="Admin"><i class="mdi mdi-delete"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            a++;
                        }
                    </tbody>
                </table>
            </div>
            <nav aria-label="..." class="container d-flex justify-content-center" style="margin-top:10px;">
                <ul class="pagination">
                    <li class="page-item @(Model.HasPrevious?"":"disabled")">
                        <a class="page-link" asp-area="Admin" asp-controller="Category" asp-action="Index"
                           asp-route-page="@(Model.CurrentPage-1)" asp-route-take="@Model.Take" tabindex="-1">Previous</a>
                    </li>
                    @for (int i = 1; i <= Model.PageCount; i++)
                    {
                            <li class="page-item @(@i==Model.CurrentPage?"active":"")" aria-current="page">
                                <a class="page-link" asp-area="Admin" asp-controller="Category" asp-action="Index" 
                                asp-route-page="@i" asp-route-take="@Model.Take">@i</a>
                            </li>
                    }
                    <li class="page-item @(Model.HasNext?"":"disabled")">
                        <a class="page-link" asp-area="Admin" asp-controller="Category" asp-action="Index"
                           asp-route-page="@(Model.CurrentPage+1)" asp-route-take="@Model.Take">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

