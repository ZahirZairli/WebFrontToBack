@model List<BasketItemVM>
@{
    ViewData["Title"] = "Index";
    int a = 1;
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <a class="btn btn-success text-light" style="float:right;">Basket</a>
                <br />
                <br />
                <br />
                @if(Model.Count !=0){

                <table class="table text-center table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Picture
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Price
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Count
                            <th>
                                Total Price
                            </th>
                            <th>
                                Edit
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BasketItemVM item in Model)
                        {
                            <tr>
                                <th>
                                    @a
                                </th>
                                <td style="width:13%;">
                                    <img style="width:50%;border-radius:50%;display:inline-block;background-color:red;" src="~/assets/img/@item.ImagePath" alt="image" /> 
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    @item.Price
                                </td>
                                <td>
                                    @item.CategoryName
                                </td>
                                <td>
                                    @item.ServiceCount
                                </td>
                                <td>
                                    @(item.Price*item.ServiceCount)
                                </td>
                                <td>
                                    <div class="dropdown">
                                        <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                            <i class="bx bx-dots-vertical-rounded"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <a class="dropdown-item" asp-controller="Basket" asp-action="Detail" asp-route-id="@item.Id" asp-area="Admin"><i class="mdi mdi-account-card-details"></i> Detail</a>
                                            <a class="dropdown-item" asp-controller="Basket" asp-action="Delete" asp-route-id="@item.Id" asp-area="Admin"><i class="mdi mdi-delete"></i> Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            a++;
                        }
                    </tbody>
                </table>
                <p class="btn btn-outline-primary" style="float:right;">Total Price: @Model.Sum(s=>s.Price*s.ServiceCount)</p>
                }else{
                    <pre class="text-danger text-center">There is not data in your basket!</pre>
                }
            </div>
        </div>
    </div>
</div>

